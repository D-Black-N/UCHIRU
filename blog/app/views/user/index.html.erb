<div class="menu">
  <ul>
    <%= link_to root_path do %><li>Лента</li><% end %>
    <%= link_to session_index_path do %><li>Авторизация</li><% end %>
    <%= link_to user_index_path do %><li class="clicked">Регистрация</li><% end %>
    <%= link_to task_index_path do %><li>Задания 6,7</li><% end %>
  </ul>
</div>
<div class="content">
  <div class="action-name">
    <h2>Регистрация</h2>
  </div>

  <div class="form">
    <%= form_with model: @user, url: "/user", method: :post,  html: {class: "user-form"} do |f| %>
      <div class="label">
        <%= f.label :login, "Логин" %>
      </div>
      <div class="login">
        <%= f.text_field :login, class: "input" %>
      </div>
      <div class="label">
        <%= f.label :password, "Пароль" %>
      </div>
      <div class="password">
        <%= f.password_field :password, class: "input" %>
      </div>
      <div class="label">
        <%= f.label :password_confirmation, "Подтвердите пароль" %>
      </div>
      <div class="password-confirmation">
        <%= f.password_field :password_confirmation, class: "input" %>
      </div>
      <div>
        <%= f.submit "Зарегистрироваться", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
