<div class="menu">
  <ul>
    <%= link_to root_path do %><li>Лента</li><% end %>
    <%= link_to new_post_path do %><li>Создать пост</li><% end %>
    <%= link_to edit_user_path(@current_user) do %><li class="clicked">Профиль</li><% end %>
    <%= link_to session_path(@current_user), method: :delete do %><li>Выход</li><% end %>
  </ul>
</div>

<div class="content">
  <div class="action-name">
    <h2>Редактирование профиля</h2>
  </div>

  <div class="form">
    <%= form_with model: @user, url: user_path(@user), method: :patch,  html: {class: "user-form"} do |f| %>
      <div class="label">
        <%= f.label :login, "Логин" %>
      </div>
      <div class="login">
        <%= f.text_field :login, class: "input" %>
      </div>
      <div class="label">
        <%= f.label :password, "Пароль" %>
      </div>
      <div class="password">
        <%= f.password_field :password, class: "input" %>
      </div>
      <div class="label">
        <%= f.label :password_confirmation, "Подтвердите пароль" %>
      </div>
      <div class="password-confirmation">
        <%= f.password_field :password_confirmation, class: "input" %>
      </div>
      <div>
        <%= f.submit "Обновить", class: "button" %>
      </div>
      <div class="delete-button">
        <%= link_to "Удалить профиль", user_path(@user), method: :delete %>
      </div>
    <% end %>
  </div>
</div>